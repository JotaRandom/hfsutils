# top-most EditorConfig file
root = true

[*]
# Core settings for all files
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# C and C++ specific settings
[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_size = 4

# Makefile specific settings
[Makefile]
indent_style = tab
indent_size = 8
# Tabs are typically 8 spaces wide in Makefiles

# Configure script specific settings
[configure]
indent_style = space
indent_size = 2
# Common for shell scripts

# README.md specific settings
[*.md]
trim_trailing_whitespace = false
# Allows for intentional trailing spaces in Markdown